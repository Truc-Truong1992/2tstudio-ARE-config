  "input_caption_xpath": "xpath://div[@role='textbox' and @contenteditable='true']",
  
  "btn_next_aria_xpath": "xpath://div[@aria-label='Tiếp' and @role='button']",
  "btn_next_text_xpath": "xpath://div[@role='button']//span[text()='Tiếp']",
  
  "btn_post_aria_xpath": "xpath://div[@aria-label='Đăng' and @role='button']",
  "btn_post_text_xpath": "xpath://div[@role='button']//span[text()='Đăng']",
  
